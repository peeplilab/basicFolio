<%include partials/header%>
<div class="container">
     <h2 style="text-align:center">Edit <%=project.name%></h2>

    <div class="row">
    <div  style="width: 30%; margin: 25px auto;">

<form action="/projects/<%=project._id%>/?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="name" value="<%=project.name%>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="image" value="<%=project.image%>">
    </div>
   
    <div class="form-group">
            <textarea class="form-control" rows="8" name="description"  placeholder="description"><%=project.description%> </textarea> 
        </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">ADD PROJECT</button>
    </div>
</form>
<a href="/projects">Go back</a>
</div>
</div>
</div>
<%include partials/footer%>
